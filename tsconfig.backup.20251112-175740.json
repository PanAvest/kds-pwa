{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",   // <-- lowercase
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": { "@/*": ["./*"] },
    "types": ["node"],
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "app",
    "app.d.ts",
    "components",
    "lib",
    "next-env.d.ts",
    "types.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
